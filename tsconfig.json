{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"sourceMap": true,
		"outDir": "./lib",
		"jsx": "react",
		"lib": ["esnext", "dom"],
		"baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib", "*.test.*"]
}
